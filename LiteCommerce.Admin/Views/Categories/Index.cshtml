@model LiteCommerce.Models.CategoryPaginationResult

@{
    ViewData["Title"] = "Category";
    ViewData["HeaderTitle"] = "Manage Categories";
    int i = (Model.Page - 1) * Model.PageSize;
}

@functions{
    public string maybeSearchQuery(string SearchValue) {
        return SearchValue != "" 
            ? string.Format("&searchvalue={0}", SearchValue)
            : "";
    }
    public string justPageQuery(int page) {
        return "page=" + page;
    }
    public string singularOrPluralWord(int count, string singularWord, string pluralWord) {
        return count > 1
            ? pluralWord
            : singularWord;
    }
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Categories" method="GET" >
            <div class="input-group input-group-sm">
                <input name="searchValue" type="text" class="form-control" placeholder="Input search value..." value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
<form id="delete-selected" action="~/Categories/Delete" method="POST">
    <div class="container-fluid row" style="margin-bottom:10px;">
        <div class="col-sm-8">
            There are <b>@Model.RowCount</b> @singularOrPluralWord(Model.RowCount, "category","categories"). Page <b>@string.Format("{0}/{1}", Model.Page, Model.PageCount)</b>
        </div>
        <div class="col-md-4 text-right">
            <div class="btn-group">
                <a href="~/Categories/Input" class="btn btn-sm btn-primary">Add Category</a>
                <button type="submit" class="btn btn-sm btn-danger">Delete Categories</button>
            </div>
        </div>
    </div>
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:30px">
                            <input type="checkbox" id="checkAll"/>
                        </th>
                        <th style="width:50px">#</th>
                        <th style="width:200px">Category Name</th>
                        <th style="width:auto">Description</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Data)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="CategoryIDs" value="@category.CategoryID"/>
                            </td>
                            <td>@(++i)</td>
                            <td><p>@category.CategoryName</p></td>
                            <td><p>@category.Description</p></td>
                            <td class="text-right">
                                <a class="btn btn-sm btn-default" href="~/Categories/Input/@category.CategoryID/">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="box-footer clearfix text-center">
            <ul class="pagination pagination-sm no-margin pull-right">
                @if(Model.Page > 1) {
                    <li><a href="~/Categories?@maybeSearchQuery(@Model.SearchValue)">«</a></li>
                }
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active"><a href="">@p</a></li>
                    }
                    else
                    {
                        <li><a href="~/Categories?@justPageQuery(@p)@maybeSearchQuery(@Model.SearchValue)">@p</a></li>
                    }
                }
                @if(Model.Page < Model.PageCount) {
                    <li><a href="~/Categories?@justPageQuery(@Model.PageCount)@maybeSearchQuery(@Model.SearchValue)">»</a></li>
                }
            </ul>
        </div>
    </div>
</form>