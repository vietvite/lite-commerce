@model LiteCommerce.DomainModels.Country

@{
    ViewData["Title"] = "Country";
}

<div class="box box-primary">
    <form action="~/Countries/Input/@Model.CountryID" method="POST" role="form">
        <div class="box-header text-right">
            <a href="~/Countries">Back to List</a>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label>Country ID:</label>
                    <input name="CountryID" value="@Model.CountryID" type="text" class="form-control" placeholder="Enter Country ID">
                    @Html.ValidationMessage("CountryID", new { @class="help-block" })
                </div>
                <div class="form-group col-sm-6">
                    <label>Country Name:</label>
                    <input name="CountryName" value="@Model.CountryName" type="text" class="form-control" placeholder="Country Name">
                    @Html.ValidationMessage("CountryName", new { @class="help-block" })
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Countries">
                Cancel
            </a>
        </div>
    </form>
</div>